@model CapSystemFinal.Models.Complaint

@{
    ViewData["Title"] = "Details";
}

<h1>Complaint Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.complaintStatus)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.ComplaintStatus
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.complaintType)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.ComplaintType
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.transformationDirection)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.TransformationDirection
        </dd>
    </dl>
</div>
<div>
    @if (Model?.ComplaintStatusId == 1)
    {
        <div>
            @* <a asp-action="Edit" asp-route-id="@Model?.ComplaintId" type="submit" class="btn btn-primary"> *@
            @*     <i class="bi bi-pencil-square"></i> *@
            @*     Edit *@
            @* </a> *@
            @* <a asp-action="Index">Back to List</a> *@
            <a asp-action="Index" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>

        </div>
    }

    @if (Model?.ComplaintStatusId != 1)
    {
        
        <div>
            @* <a asp-action="Edit" asp-route-id="@Model?.ComplaintId">Edit</a> *@
            <a asp-action="Edit" asp-route-id="@Model?.ComplaintId" type="submit" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>
                Edit
            </a>
            @* <a asp-action="Index">Back to List</a> *@
            <a asp-action="Index" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>
        </div>
    
    }

</div>
