@using System.Security.Claims
@model CapSystemFinal.Models.Complaint

@{
    ViewData["Title"] = "Create";
}

<h1>Create Complaint</h1>


<p>@ViewData["studentId"]</p>

<hr />
<div class="row">
  
    <div class="col-md-12">
       
        <form asp-controller="ComplaintStudents" asp-action="Create" method="post">        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="All"></div>
            @* <input asp-for="ComplaintId" required hidden /> *@
            <div class="form-group mb-2">
                <label asp-for="subject" class="control-label"></label> 
                <input type="text" asp-for="subject" class="form-control" />
                <span asp-validation-for="subject" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="description" class="control-label"></label>
                <input type="text" asp-for="description" class="form-control p-5" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" type="date" value="@ViewData["CurrentDate"]" readonly/>
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group mb-2" hidden>
                <label asp-for="ComplaintStatusId" class="control-label"></label>
                <select asp-for="ComplaintStatusId" class="form-control"  readonly >
                    <option value="2" >@ViewData["ComplaintStatus"]</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label hidden asp-for="UserId" class="control-label"></label>
                <input type="hidden" name="userId" asp-for="UserId" class="form-control" value="@ViewData["UserId"]" />
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="CompTypeId" class="control-label"></label>
                <select asp-for="CompTypeId" class="form-control" asp-items="ViewBag.CompTypeId"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TransformationDirectionId" class="control-label"></label>
                 <select asp-for="TransformationDirectionId" class ="form-control mb-4" asp-items="ViewBag.TransformationDirectionId">
					<option value="">--Select Transformation Direction --</option>
                 </select>
             </div>
            
            <div class="form-group mb-3 d-flex gap-3">
                @* <input type="submit" value="Create"  class="btn btn-primary" /> *@
                <button type="submit" class="btn btn-primary">
                    @* <i class="fas fa-arrow-left"></i> *@
                    <i class="bi bi-plus-circle"></i>
                    
                    Create
                </button>
                <a asp-action="Index" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i>
                    Back
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
